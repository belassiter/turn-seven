rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow read/write access to all documents for any authenticated user.
    // Since the app uses signInAnonymously(), this ensures that only
    // users using the app (and not random internet traffic) can access the data.
    //
    // Note: Cloud Functions using the Admin SDK bypass these rules, so
    // game logic executed on the server is not affected.
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
