{
  "name": "turn-seven-monorepo",
  "private": true,
  "scripts": {
    "dev": "pnpm --filter turn-seven dev",
    "build": "pnpm --filter turn-seven build",
    "test": "vitest --run",
    "test:ui": "vitest --ui",
    "lint": "eslint --ext .ts,.tsx,.js --max-warnings=0 .",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "verify:ai": "node ./scripts/verify-ai.js",
    "build:all": "pnpm -w -r run build",
    "check": "pnpm -w -s run format:check && pnpm -w -s run lint && pnpm test && pnpm -w -s run build:all"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^18.3.7",
    "@vitejs/plugin-react": "^4.7.0",
    "@vitest/ui": "^4.0.14",
    "jsdom": "^27.2.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "typescript": "^5.0.0",
    "vite": "^5.0.0",
    "vitest": "^4.0.14",
    "eslint": "^8.47.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^4.2.1",
    "@typescript-eslint/parser": "^6.1.0",
    "@typescript-eslint/eslint-plugin": "^6.1.0",
    "eslint-plugin-react": "^7.33.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "prettier": "^2.8.8"
  },
  "dependencies": {
    "firebase": "^12.6.0"
  }
}
