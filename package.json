{
  "name": "turn-seven-monorepo",
  "private": true,
  "scripts": {
    "dev": "pnpm --filter turn-seven dev",
    "build": "pnpm --filter turn-seven build",
    "test": "vitest --run",
    "test:ui": "vitest --ui",
    "lint": "eslint --ext .ts,.tsx,.js --max-warnings=0 .",
    "lint:src": "eslint --ext .ts,.tsx,.js --max-warnings=0 packages/engine/src packages/games/turn-seven/src functions/src",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "verify:ai": "node ./scripts/verify-ai.js",
    "build:all": "pnpm -w -r run build",
    "emulate": "pnpm --filter functions run build && pnpm --filter ./packages/games/turn-seven run build && firebase emulators:start",
    "emulate:watch": "pnpm --filter functions run build && pnpm --filter ./packages/games/turn-seven run build:watch & firebase emulators:start",
    "emulate:all": "concurrently \"pnpm --filter functions run build && chokidar \\\"functions/src/**/*\\\" -c 'pnpm --filter functions run build'\" \"pnpm --filter ./packages/games/turn-seven run build:watch\" \"firebase emulators:start\" --kill-others-on-fail",
    "emulator:run-tests": "node ./scripts/emulator-runner.js",
    "simulate": "vitest run --config ./vitest.config.simulation.ts",
    "check": "pnpm -w -s run format:check && pnpm -w -s run lint && pnpm test && pnpm -w -s run build:all"
  },
  "devDependencies": {
    "chokidar-cli": "^3.0.0",
    "concurrently": "^8.2.0",
    "@babel/preset-react": "^7.28.5",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^18.3.7",
    "@typescript-eslint/eslint-plugin": "^6.1.0",
    "@typescript-eslint/parser": "^6.1.0",
    "@vitejs/plugin-react": "^4.7.0",
    "@vitest/ui": "^4.0.14",
    "eslint": "^8.47.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.33.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "firebase-tools": "^13.11.2",
    "jsdom": "^27.2.0",
    "prettier": "^2.8.8",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "typescript": "^5.0.0",
    "vite": "^5.0.0",
    "vite-plugin-markdown": "^2.2.0",
    "vitest": "^4.0.14"
  },
  "dependencies": {
    "firebase": "^12.6.0"
  }
}
